<!DOCTYPE html>
<head>
    <title>CampStay</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" 
    crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/main.css">
</head>
<body>
    <nav class="navbar navbar-default campstay">
   <div class="container-fluid" >
       <div class="navbar-header">
           <a style="color:#fff;" class="navbar-brand logo" href="/">CampStay</a>
       </div>
       <div class="collapse navbar-collapse">
           <ul class="nav navbar-nav navbar-right">
               <% if(!currentUser){ %>
               <li><a style="color:#fff;" href="/login">Login</a></li>
               <li><a style="color:#fff;" href="/register">Sign Up</a></li>
               <% } else { %>
               <li><a a style="color:#fff;" href="#">Signed In As <%= currentUser.username%></a></li>
               <li><a a style="color:#fff;" href="/logout">Logout</a></li>
               <% } %>
           </ul>
       </div>
   </div>
</nav>
<div class="container">
    <% if(error && error.length > 0) { %>
<div class="alert alert-danger" role="alert">
 <%= error %>
</div>
<% } %>
 <% if(success && success.length > 0) { %>
<div class="alert alert-success" role="alert">
 <%= success %>
</div>
<% } %>
</div>
